#!/bin/bash

# Set HOME environment variable explicitly for sail user
if [ "$SUPERVISOR_PHP_USER" = "sail" ]; then
    export HOME="/home/sail"
fi

# Configure X11 for all environments, not just WSL
echo "Configuring X11 for Tauri..."

# Create Xauthority file
touch /home/sail/.Xauthority
chown sail:sail /home/sail/.Xauthority

# Ensure X11 directories exist with proper permissions
mkdir -p /tmp/.X11-unix
chmod 1777 /tmp/.X11-unix
xauth generate :99 . trusted 2>/dev/null || echo "xauth command failed, continuing anyway"

# Set up runtime directory
mkdir -p /tmp/runtime-dir
chmod 700 /tmp/runtime-dir
chown sail:sail /tmp/runtime-dir

# Run Xvfb explicitly first to ensure it's ready
Xvfb :99 -screen 0 1024x768x24 -ac +extension GLX +render -noreset &
sleep 2


# Standard setup follows
if [ "$SUPERVISOR_PHP_USER" != "root" ] && [ "$SUPERVISOR_PHP_USER" != "sail" ]; then
    echo "You should set SUPERVISOR_PHP_USER to either 'sail' or 'root'."
    exit 1
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

# Run supervisord
if [ $# -gt 0 ]; then
    if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
        exec "$@"
    else
        exec gosu $WWWUSER "$@"
    fi
else
    echo "Starting supervisord..."
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
